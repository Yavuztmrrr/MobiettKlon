<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >
    <shape
        android:innerRadius="@dimen/progressDialogTasarimRadius"
        android:shape="ring"
        android:thickness="@dimen/progressDialogTasarimThickness"
        android:useLevel="false" >
        <size
            android:height="@dimen/progressDialogTasarimHeight"
            android:width="@dimen/progressDialogTasarimWidth" />
        <gradient
            android:startColor="@color/white"
            android:endColor="@color/kirmizi"
            android:useLevel="false" />
    </shape>

</rotate>