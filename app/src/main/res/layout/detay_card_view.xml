<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detayCardViewHeight"
        android:layout_marginLeft="@dimen/detayCardViewMargin"
        android:layout_marginRight="@dimen/detayCardViewMargin"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detayCardViewHeight"
            android:layout_marginLeft="@dimen/detayCardViewMargin"
            android:layout_marginRight="@dimen/detayCardViewMargin">

            <TextView
                android:id="@+id/txtDetayIcerik"
                android:layout_width="@dimen/detayCardViewWidth"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detayConstTextViewMarginTop"
                android:layout_marginBottom="@dimen/detayConstTextViewMarginBottom"
                android:textSize="@dimen/detayConstTextViewMarginSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCategoryResim"
                app:layout_constraintTop_toBottomOf="@+id/txtBaslik"
                tools:text="KAÄžITHANE" />

            <ImageView
                android:id="@+id/imgCircle"
                android:layout_width="@dimen/detayConstImageWidth"
                android:layout_height="@dimen/detayConstImageHeight"
                android:layout_marginTop="@dimen/detayConstImageWidthMargin"
                app:layout_constraintEnd_toStartOf="@+id/txtDetayIcerik"
                app:layout_constraintHorizontal_bias="0.28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_circle" />
            <ImageView
                android:id="@+id/imgCizgi"
                android:layout_width="@dimen/detayConstImageWidth"
                android:layout_height="@dimen/detayConstImageHeight"
                android:layout_marginTop="@dimen/detayConstImageWidthMarginTop"
                app:layout_constraintEnd_toStartOf="@+id/txtDetayIcerik"
                app:layout_constraintHorizontal_bias="0.28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_line" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>